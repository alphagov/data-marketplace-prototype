{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% macro optionSelect(params) %}

    {% if params.filter %}
      {% set filter %}
          <label for="option-select-filter-input-{{ params.id }}" class="govuk-label govuk-visually-hidden">
            Filter {{ params.title }}
          </label>
          <input
            name="option-select-filter"
            id="option-select-filter-input-{{ params.id }}"
            class="gem-c-option-select__filter-input govuk-input"
            type="text"
            aria-describedby="option-select-checkboxes-count-{{ title }}"
            aria-controls="option-select-checkboxes-{{ title }}">
      {% endset %}
    {% endif %}

  <div class="gem-c-option-select" data-module="option-select" 
    {% if params.filter %}data-filter-element="{{ filter | doubleEscape | safe }}"{% endif %} >
    <h3 class="gem-c-option-select__heading js-container-heading">
      <div class="gem-c-option-select__toggle js-container-toggle">
        <span class="gem-c-option-select__title js-container-button" id="{{ params.id }}">{{ params.title }}</span>
        <svg
          version="1.1"
          viewBox="0 0 1024 1024"
          xmlns="http://www.w3.org/2000/svg"
          width="0"
          height="0"
          class="gem-c-option-select__icon gem-c-option-select__icon--up"
          aria-hidden="true"
          focusable="false"><path d="m798.16 609.84l-256-256c-16.683-16.683-43.691-16.683-60.331 0l-256 256c-16.683 16.683-16.683 43.691 0 60.331s43.691
            16.683 60.331 0l225.84-225.84 225.84 225.84c16.683 16.683 43.691 16.683 60.331 0s16.683-43.691 0-60.331z"/> </svg>
        <svg
          version="1.1"
          viewBox="0 0 1024 1024"
          xmlns="http://www.w3.org/2000/svg"
          width="0"
          height="0"
          class="gem-c-option-select__icon gem-c-option-select__icon--down"
          aria-hidden="true"
          focusable="false"><path d="m225.84 414.16l256 256c16.683 16.683 43.691 16.683 60.331 0l256-256c16.683-16.683 16.683-43.691
            0-60.331s-43.691-16.683-60.331 0l-225.84 225.84-225.84-225.84c-16.683-16.683-43.691-16.683-60.331 0s-16.683 43.691 0
            60.331z"/> </svg>
      </div>
    </h3>

      <div class="gem-c-option-select__container js-options-container">
        <div class="gem-c-option-select__container-inner js-auto-height-inner">

        <span id="option-select-checkboxes-count-{{ title }}"
          class="gem-c-option-select__count govuk-visually-hidden"
          aria-live="polite"
          data-single="option found"
          data-multiple="options found"
          data-selected="selected"></span>

          {{ govukCheckboxes(params.checkboxes) }}
        </div>
      </div>
    </div>
  {% endmacro %}